<?php

if($_SERVER["REQUEST_METHOD"] != "POST"){
  //POST以外をはじく
  header("HTTP/1.0 404 Not Found");
  return;
}
 

header("Content-Type: text/html; charset=UTF-8");

//Proposal for "Service_JSON"を使ってJSONを処理する以下からダウンロード
require_once "Services/JSON.php";

//データはUTF-8で取得される
//ほかのエンコードに変える場合は変換が必要
$x = $_POST['x'];
$x = mb_convert_encoding($x,"EUC-JP","UTF-8");
$y = $_POST['y'];
$x = mb_convert_encoding($y,"EUC-JP","UTF-8");
$r = $x . $y;

$answer  = "答えは{$r}";
sleep(1);

$answer = mb_convert_encoding($answer,"UTF-8","auto");
$arr = array(
  "answer" => $answer
);
$json = new Services_JSON;
$encode = $json->encode($arr); //JSONに変換
echo $encode; //JSONを出力
?>
