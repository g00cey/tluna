filetype plugin indent on
syntax on

"Vundle
if has("win32") || has("win64")
  set rtp+=~/vim/vundle/
  set guifont=Osaka−等幅:h09:cSHIFTJIS
  source $HOME/_vimrc-color
  call vundle#rc('~/vim/bundle/')
else 
  source ~/.vimrc-color
  set rtp+=~/.vim/vundle/
  call vundle#rc()
endif

"templates
augroup SkeletonAu
  autocmd!
  autocmd BufNewFile *.html 0r ~/.vim/templates/skel.html
augroup END

"original repos on github
Bundle 'gmarik/vundle'
Bundle 'fugitive.vim'
Bundle 'taglist.vim'
Bundle 'listtag'
Bundle 'git://github.com/thinca/vim-ref.git'
Bundle 'git://github.com/tpope/vim-rails.git'
Bundle 'eruby.vim'
Bundle 'ruby.vim'
Bundle 'DirDiff.vim'
Bundle 'svndiff.vim'
Bundle 'Align'
Bundle 'matchit.zip'
Bundle 'Rubytest.vim'
Bundle 'neocomplcache'
Bundle 'EnhCommentify.vim'
Bundle 'unite.vim'
Bundle 'ZenCoding.vim'
Bundle 'surround.vim'
Bundle 'quickrun'
Bundle 'superSnipMate'
Bundle 'Solarized'
Bundle 'XPath-Search'

"xpath-search
let g:loaded_xpath = 1

"ftdetect
runtime! ftdetect\*.vim

" edit
set autoindent
set smartindent
set showmatch
set wildmenu

"tab
set tabstop=2
set shiftwidth=2
set expandtab
set autoindent

"display 
set         number

"filebackup
set backup
set swapfile
if has('win32')
  set dir=~/_vim/swap
  set backupdir=~/_vim/backup
else 
  set dir=~/.vim/swap
  set backupdir=~/.vim/backup
endif


"fileenconrdings
set fileencodings=utf-8,iso-2022-jp,sjis

"vim/ruby
let g:rubycomplete_buffer_loading = 1
let g:rubycomplete_classes_in_global = 1
let g:rubycomplete_rails = 1

imap <C-Space> <C-x><C-o>

"rails.vim
let g:rails_dbext      = 1
let g:rails_gnu_screen = 1
let g:rails_modelines  = 1

"netrw
let g:netrw_liststyle = 3

"grep
let Grep_Path             = 'grep'
let Fgrep_Path            = 'fgrep'
let Egrep_Path            = 'egrep'
let Grep_Find_Path        = 'find'
let Grep_Xargs_Path       = 'xargs'
let Grep_Shell_Quote_Char = '"'

cmap wr w<Bar>!perl ~/.vim/auto_upload.pl "%:p"

"align
let g:Align_xstrlen = 3

"ref
"alc (eijirou)
nmap ,ra :<C-u>Ref alc<Space>
"refe (ruby-refe)
nmap ,rr :<C-u>Ref refe<Space>
let g:ref_alc_start_linenumber = 100 "表示する行数
"let g:ref_alc_encoding = 'Shift-JIS'

"neocomplcache
let g:neocomplcache_enable_at_startup = 1 " 起動時に有効化
