#boot2docker
machine_name='defaults'
docker_machine_status=`""docker-machine status ""$machine_name""`
#なかったら
if [ "$docker_machine_status" = "" ]; then
  docker-machine create --driver=virtualbox "$machine_name"
fi
#あったら
echo "$docker_machine_status"
if [ "$docker_machine_status" = 'Stopped' ]; then
    docker-machine start $machine_name
fi
if [ "$docker_machine_status" = 'Running' ]; then
  eval "$(docker-machine env $machine_name)"
fi
