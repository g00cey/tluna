# .bashrc
redhatfile="/etc/redhat-release"
# Source global definitions
if [ -f /etc/bashrc ]; then
  . /etc/bashrc
fi

# User specific aliases and functions
PATH=/Applications/android-sdk-macosx/platform-tools/:/usr/local/Cellar/php54/5.4.8/bin/:~/.rvm/bin:~/bin:/var/lib/gems/1.8/bin/:/usr/local/gae/:/usr/local/sbin/:/usr/local/bin/:~/bin/:/sbin/:$PATH
export PATH
export LANG=ja_JP.UTF-8
export EDITOR=vim
export TERM=xterm-256color
#ssh-agent ssh-add alias
alias ssh-agent-run='exec ssh-agent bash'
if [ `uname` = "Darwin" ]; then
  alias key-tluna='ssh-add /Users/luna/.ssh/tluna_id_rsa'
  alias key-github='ssh-add /Users/luna/.ssh/git_id_rsa'
  alias key-ubuntu='ssh-add /Users/luna/.ssh/centos_local'
elif [ `uname` = "Linux" ]; then
  alias key-tluna='ssh-add /home/luna/.ssh/tluna_id_rsa'
  alias key-github='ssh-add /home/luna/.ssh/git_id_rsa'
fi
alias sudo="sudo env PATH=$PATH"
#tailf
alias tailf='tail -f'
alias php-fpm='/usr/local/sbin/php-fpm --fpm-config=/usr/local/Cellar/php54/5.4.8/etc/php-fpm'
